{
	"name": "Trelldown",
	"version": "0.1",
	"manifest_version": 2,
	"description": "Burndown chart for Trello",
	"content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
	"permissions": [
		"https://*.trello.com/*"
	],
	"web_accessible_resources":[
		"trelldown.js",
		"simplemodal.js",
		"highcharts.js"
	],
	"content_scripts":[
        {
            "matches": ["https://*.trello.com/*"],
            "css": ["trelldown.css"],
            "js": ["inject.js"]
        }
    ]
}
